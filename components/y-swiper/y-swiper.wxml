<!--components/y-swiper/y-swiper.wxml-->
<swiper class="swiper" 
        circular autoplay 
        interval="3000" 
        duration="300" 
        indicator-dots 
        indicator-active-color="#fff">
	<swiper-item wx:for="{{banners}}" wx:key="{{index}}" class="swiper-item">
		<image src="{{item.image||item}}" mode="widthFix" />
	</swiper-item>
</swiper>