<!--pages/category/y-menu/y-menu.wxml-->
<scroll-view class="menu" scroll-y>
 <block>
    <view class="menu-item {{index==currentIndex?'active':''}}" 
          wx:for="{{menu}}" 
          wx:key="index"
          bind:tap="menuClick"
           data-index="{{index}}"
          >{{item.title}}</view>
 </block>
</scroll-view>
